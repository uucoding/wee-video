/* components/tableinput.wxss */

.table-input-container {
  width: 100%;
  display: flex;
  font-size: 15px;
  color: white;
  flex-direction: column;
  justify-content: space-around;
  border-top: solid 1px #222;
}

.table-input-cell {
  display: flex;
  width: 100%;
  padding: 5px 0;
  flex-direction: row;
  justify-content: space-between;
  background-color: black;
}
input {
  text-align: right;
  padding-right: 10px;
  width: 80%;
}
.label {
  padding-left: 10px;
}
